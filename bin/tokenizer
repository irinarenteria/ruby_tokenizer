#!/usr/bin/env ruby

require 'ruby_tokenizer'
require 'pry'

if ARGV.empty?
	puts "--- Please input your text below ----"
	text = STDIN.gets
elsif ARGV.detect {|input| File.file?(input) == false}
	puts "Error"
	exit 2
else
	text = ARGF.read
end

string = RubyTokenizer::Tokenizer.new(text)
top = string.rank

Pry::ColorPrinter.pp(top)